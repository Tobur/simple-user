<div class="form-wrapper">
    {{ form_start(form, { 'action': path('simple_user_forgot_password'), 'method': 'post'}) }}
    <h1>{{ 'Password reset'|trans() }}</h1>
    <div class="form-group">
        {{ form_errors(form.email) }}
        {{ form_label(form.email) }}
        {{ form_widget(form.email, { 'attr': { 'class': 'form-control' } }) }}
    </div>

    <div class="auth-btn-section">
        {{ form_widget(form.submit, { 'attr': { 'class': 'form-control btn' }}) }}
    </div>
    {{ form_end(form) }}
</div>