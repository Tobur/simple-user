<div class="form-wrapper">
    {{ form_start(form, { 'action': path('simple_user_login_check'), 'method': 'post'}) }}
    <h1>{{ 'Login'|trans() }}</h1>
    <div class="form-group">
        {{ form_label(form._username) }}
        {{ form_widget(form._username, { 'attr': { 'class': 'form-control' } }) }}
    </div>

    <div class="form-group">
        {{ form_label(form._password) }}
        {{ form_widget(form._password, { 'attr': { 'class': 'form-control' } }) }}
    </div>

    {% if error %}
        <div class="form-error">
            {{ error.message|trans() }}
        </div>
    {% endif %}

    <div class="auth-btn-section">
        {{ form_widget(form.submit, { 'attr': { 'class': 'form-control btn' } }) }}
    </div>
    {{ form_end(form) }}
</div>